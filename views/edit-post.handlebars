<div class="post card">
  <div class="card-header">
    <h2>Edit Post</h2>
  </div>
  <form id="edit-post-form" class="card-body edit-post-form">
    <input type="hidden" name="post-id" value="{{post.id}}" />
    <label class="form-label" for="post-title">Title</label>
    <input type="text" name="post-title" value="{{post.title}}" class="form-input" />
    <label class="form-label" for="post_text">Content</label>
    <textarea name="post_text" class="form-input">{{post.post_text}}</textarea>
    <button type="submit" class="btn">Update</button>
    <button type="button" id="delete-btn" class="btn">Delete</button>
  </form>
</div>
<script src="/javascript/edit-post.js"></script>